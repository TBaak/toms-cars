{% extends 'base.html.twig' %}

{% block title %}- {% if car %}Auto: {{ car.make }} {{ car.model }}{% else %}Geen informatie{% endif %}{% endblock %}

{% block body %}
    <div class="container bg-dark pl-lg-5 pr-5 pb-5 rounded-bottom-pill-fixed mb-5 pt-5 col-12 col-lg-8">
        <h1 class="text-white text-center mb-4 mb-lg-5 w-100">Informatie</h1>
        {% if car %}
            <div class="ml-5 text-white">
                <h1>{{ car.make }}</h1>
                <h2 class="text-info">{{ car.model }}</h2>
                <p>
                    {{ car.description }}
                </p>
            </div>
        {% else %}
            <h3 class="text-center text-secondary">Het lijkt er op dat er geen informatie beschikbaar is!</h3>
        {% endif %}

        <a href="{{ path('cars') }}" class="btn btn-primary ml-5">
            <h6 class="m-0 text">Terug</h6>
        </a>

    </div>
{% endblock %}